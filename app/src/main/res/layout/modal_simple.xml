<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/rounded_modal_bg">

    <!-- 제목 -->
    <TextView
        android:id="@+id/modal_simple_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:textColor="@color/modal_text"
        android:singleLine="false"
        android:lines="5"
        android:scrollHorizontally="false"/>

    <!-- 버튼을 수평으로 배치 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <!-- 예 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/modal_simple_yes_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20px"
            android:text="예"
            android:textColor="@color/modal_button_text"
            android:textSize="12sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/rounded_modal_button" />

        <!-- 아니오 버튼 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/modal_simple_no_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="20px"
            android:text="아니오"
            android:textSize="12sp"
            android:textColor="@color/modal_button_text"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@drawable/rounded_modal_button" />
    </LinearLayout>

</LinearLayout>
