<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/modal_bg"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_gravity="center"
        android:gravity="center">

        <!-- 제목 텍스트와 선 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="매달 추가될 데이터를 입력해 주세요."
            android:textColor="@color/modal_text"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 제목 아래 선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- 결제 정보 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정보"
                android:textSize="14sp"
                android:textColor="@color/modal_text"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/modal_regularly_title_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:hint="예: 커피 구매"
                android:textColor="@color/modal_text"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- 날짜 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일자"
                android:textSize="14sp"
                android:textColor="@color/modal_text"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/modal_regularly_day_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:hint="날짜 입력"
                android:textColor="@color/modal_text"
                android:gravity="center_vertical"
                android:inputType="number"/>
        </LinearLayout>

        <!-- 금액 입력 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액"
                android:textSize="14sp"
                android:textColor="@color/modal_text"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/modal_regularly_amount_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textSize="14sp"
                android:hint="금액 입력"
                android:textColor="@color/modal_text"
                android:gravity="center_vertical"
                android:inputType="number"/>
        </LinearLayout>

        <!-- 수입/지출 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종류"
                android:textSize="14sp"
                android:textColor="@color/modal_text"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/modal_regularly_type_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="@color/modal_text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="세부종류"
                android:textSize="14sp"
                android:textColor="@color/modal_text"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/modal_regularly_subtype_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="@color/modal_text"
                />
        </LinearLayout>

        <!-- 입력 버튼 -->
        <Button
            android:id="@+id/modal_regularly_insert_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="14sp"
            android:textColor="@color/modal_button_bg"
            android:background="@drawable/rounded_modal_button"
            android:layout_marginTop="16dp"
            android:padding="16dp"/>
    </LinearLayout>
</ScrollView>
